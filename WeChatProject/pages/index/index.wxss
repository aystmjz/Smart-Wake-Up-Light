/* 基础布局 */
.page-container {
  padding: 8rpx 36rpx;
}

/* 头部 */
.header-container {
  background-color: #3d7ef9;
  color: white;
  border-radius: 18rpx;
  margin-top: 24rpx;
  padding: 16rpx;
  text-align: center;
  box-shadow: #206eff 0 0 4rpx;
}

.header-title {
  font-size: 42rpx; /* 调整字体大小 */
  font-weight: bold; /* 加粗字体 */
  color: white; /* 设置字体颜色为白色 */
  text-align: center; /* 居中显示 */
}

/* 数据卡片 */
.data-grid {
  margin-top: 36rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 36rpx;
}

.data-card {
  background: white;
  border-radius: 24rpx;
  padding: 24rpx 36rpx;
  box-shadow: #d6d6d6 0 0 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.data-icon {
  width: 72rpx;
  height: 72rpx;
}

.data-content {
  text-align: right;
}

.data-label {
  font-size: 32rpx;
  color: #7f7f7f;
}

.data-value {
  font-size: 38rpx;
  font-weight: bold;
  color: #7f7f7f;
  padding-top: 10rpx;
}

/* 设置区域 */
.settings-section {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.setting-card {
  background: white;
  padding: 20rpx 30rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.setting-label {
  font-size: 32rpx;
  color: #7f7f7f;
}

/* 星期选择 */
.weekdays-picker {
  flex-direction: column;
  padding: 10rpx;
}

.weekday-item {
  font-size: 32rpx;
  color: #7f7f7f;
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.weekday-item:last-child {
  border-bottom: none;
}

.weekday-checkbox {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 控制区域 */
.control-section {
  margin-top: 40rpx;
  padding: 0;
}

.input-field {
  width: 94%;
  padding: 20rpx;
  margin: 20rpx 0;
  border: 1rpx solid #dcdcdc;
  border-radius: 15rpx;
  font-size: 28rpx;
  background-color: #f5f5f5;
}

.picker {
  color: #3d7ef9;
  font-size: 32rpx;
}

.submit-button {
  width: 100%;
  margin: 50rpx 20rpx;
  background: #3d7ef9;
  color: white;
  border-radius: 15rpx;
  transition: background-color 0.3s;
}

.submit-button:active {
  background: #757575;
}
