/* pages/debug/debug.wxss */

.container {
  padding: 8rpx 36rpx;
  padding-bottom: 20rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 头部 */
.header-container {
  width: 100%;
  box-sizing: border-box;
  background-color: #3d7ef9;
  color: white;
  border-radius: 18rpx;
  margin-top: 24rpx;
  padding: 16rpx;
  text-align: center;
  box-shadow: #206eff 0 0 4rpx;
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 42rpx; /* 调整字体大小 */
  font-weight: bold; /* 加粗字体 */
  color: white; /* 设置字体颜色为白色 */
  text-align: center; /* 居中显示 */
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.log-container {
  flex: 1;
  background-color: #f8f8f8;
  border-radius: 18rpx;
  margin-bottom: 40rpx;
  border: 1rpx solid #ddd;
  min-height: 300rpx;
  box-sizing: border-box;
}

.log-text {
  font-family: monospace;
  font-size: 24rpx;
  color: #333;
  white-space: pre-wrap;
  word-wrap: break-word;
  line-height: 1.5;
  display: block;
  padding: 20rpx;
  box-sizing: border-box;
}

.input-container {
  display: flex;
  margin-bottom: 20rpx;
  align-items: center;
}

.send-input {
  flex: 1;
  padding: 15rpx;
  margin-right: 20rpx;
  height: 80rpx;
  box-sizing: border-box;
  border: 1rpx solid #dcdcdc;
  border-radius: 15rpx;
  font-size: 28rpx;
  background-color: #f5f5f5;
}

.send-btn {
  flex: 1;
  padding: 15rpx;
  height: 80rpx;
  background: #3d7ef9;
  color: white;
  border-radius: 15rpx;
  transition: background-color 0.3s;
  justify-content: center;
}

.send-btn:active {
  background: #757575;
}

.actions {
  display: flex;
  gap: 20rpx;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}

.action-btn {
  flex: 1;
  background-color: #f5f5f5;
  color: #333;
  border-radius: 15rpx;
  font-size: 25rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.action-btn:active {
  background: #909090;
}

/* 暗色主题选项（如果需要） */
.log-container.dark {
  background-color: #000;
}

.log-text.dark {
  color: #0f0;
}

/* 响应式处理 */
@media (max-width: 750rpx) {
  .action-btn {
    flex-basis: calc(50% - 10rpx);
    margin-bottom: 10rpx;
  }
}

@media (max-width: 500rpx) {
  .action-btn {
    flex-basis: 100%;
  }
  
  .send-btn {
    width: 100rpx;
    font-size: 24rpx;
  }
}